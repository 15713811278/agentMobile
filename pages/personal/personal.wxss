.contain {
  width: 100%;
  background-color: #f5f5f5;
}

.user_head {
  /* width: 100%; */
  background-color: #fe6a00;
  padding: 1.5rem 1rem;
}
.user_headTop{
  display: flex;
  margin-bottom: 10rpx;
  justify-content: flex-end;
}
.user_head image {
  width: 70px;
  height: 70px;
}

.head_right {
  display: flex;
}

.userImg {
  width: 5rem;
  height: 5rem;
  border-radius: 2.5rem;
  overflow: hidden;
  margin-right: 1rem;
}

.userImg image {
  width: 100%;
  height: 100%;
}

.userInfo {
  align-self: center;
  margin-right: 10%;
}

.userName {
  color: #fff;
  font-size: 1.1rem;
  margin-bottom: 0.3rem;
  font-weight: 550;
  display: block;
}

.userTitle {
  color: #fff;
  font-size: 0.75rem;
  border: 0.05rem solid #fff;
  display: flex;
  padding: 0.2rem 0.6rem;
  border-radius: 1rem;
}

.user_menu {
  display: flex;
  text-align: center;
  background-color: #fff;
  /* padding-top: 1.5rem; */
  /* padding-bottom: 0.8rem; */
  margin-bottom: 0.8rem;
  font-size: 0.85rem;
  color: #373737;
}

.user_menu view {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 1.5rem 0 .8rem 0;
}

.user_share {
  display: flex;
  background-color: #fff;
  margin-bottom: 0.8rem;
}

.flex_box {
  padding: 1rem;
  position: relative;
  flex: 1;
}

.flex {
  display: flex;
}

.flex_grow {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex-grow: 1;
}

.flex_auto image {
  width: 40px;
  height: 40px;
  margin-right: 0;
}

.text1 {
  color: #373737;
  font-size: 0.85rem;
  margin-bottom: 0.15rem;
  font-weight: bold;
}

.text2 {
  font-weight: normal;
  font-size: 0.8rem;
  color: #a9a9a9;
  margin-bottom: 0.3rem;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  text-align: justify;
}

.r-line {
  border-right: 1px solid #f5f5f5;
}

.postcard_one {
  color: #373737;
  font-size: 0.85rem;
  padding: 1rem;
  font-weight: bold
}

.user_postcard {
  background-color: #fff;
  margin-bottom: 0.8rem;
}

.canvasList {
  display: flex;
  justify-content: space-between;
  padding: 0 1rem;
}

.list_flex image {
  width: 104px;
  height: 160px;
}

.link {
  color: #505050;
  padding: 1rem 0;
  width: 100%;
  display: block;
  text-align: center;
  font-size: 0.9rem;
}