/* pages/income/income.wxss */
.message-list {
  margin: 0 1rem;
  margin-bottom: 1rem;
}

.product-title {
  margin: 0 1rem;
  margin-top: 0.3rem;
  font-size: 0.8rem;
  padding: 0.5rem 0px;
  color: #747474;
  display: block;
}

.van-tab__pane {
  background-color: #f5f5f5;
  height: 100vh !important;
}

.message-list-box {
  position: relative;
  background-color: #fff;
  border-radius: 1rem;
  padding: 1rem;
  display: block;
  color: #666;
}

.message-title {
  color: #373737;
  padding-bottom: 0.5rem;
  font-weight: bold;
  font-size: 0.9rem;
  display: block;
  border-bottom: 1px solid #f5f5f5;

}

.message-content {
  display: block;
  text-align: center;
  padding: 0.5rem 0;
}

.price {
  color: #fe4617;
  margin-right: 0.2rem;
  font-size: 2.5rem;
}

.message-link {
  padding-top: 1rem;
  margin-top: 1rem;
  color: #666;
  font-size: 0.8rem;
  display: flex;
  border-top: 1px solid #f5f5f5;
}

.flex-grow {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex-grow: 1;
}

.flex-auto {
  flex: none;
}