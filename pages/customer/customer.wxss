/* pages/customer/customer.wxss */
.costomer {
  width: 100vw;
  background-color: #f5f5f5;
}

.costomer_top {
  color: #fff;
  width: 100%;
  background-color: #fe6a00;
  height: 300rpx;
  display: flex;
}

.costomer_top view {
  width: 100%;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.costomer_top view text {
  padding: 25rpx 0;
}

.number {
  font-size: 60rpx;
  letter-spacing: 5rpx;
}

.cost_second {
  width: 100%;
  display: flex;
  margin-bottom: .8rem;
  background-color: #fff;
}

.cost_second view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0;
}

.visitor {
  border-right: 1px solid #f5f5f5;
}

.cost_second view text {
  color: #373737;
  font-size: 0.85rem;
  margin-bottom: 0.15rem;
  font-weight: bold;
}

.cost_third {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: .8rem;
}

.cost_third .flex {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f5f5f5;
  margin: 0 20rpx;
  padding: 20rpx 0;
  justify-content: space-between;
}

.flex_left {
  display: flex;
  align-items: center;
  font-weight: normal;
  font-size: 0.9rem;
}

van-icon {
  padding-right: 5rpx;
}

.flex_right {
  font-weight: normal;
  font-size: 0.8rem;
  color: #a9a9a9;
  margin-bottom: 0.3rem;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  text-align: justify;
}

.cost_four {
  width: 100%;
  background-color: #fff;
}

.cost_four_top {
  margin: 0 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
}

.cost_four_top view {
  padding: 0 20rpx;
  margin: 30rpx 0;
}

.cost_four_top view text {
  color: #373737;
  font-size: 0.85rem;
  margin-bottom: 0.15rem;
  font-weight: bold;
}