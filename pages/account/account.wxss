/* pages/account/account.wxss */
.contain {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.container {
  height: auto;
  padding: 0;
}

ec-canvas {
  width: 100vw;
  height: 200px;
}

van-icon {
  margin-left: 0.3rem;
  margin-right: 0rem;
  color: #999;
}

.product-box {
  margin: 0.8rem 0;
  background-color: #fff;
}

.product-list {
  padding: 0.8rem 0;
  margin: 0 1rem;
  display: block;
  position: relative;
}

.flex {
  display: flex;
}

.flex-grow {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex-grow: 1;
}

.sub-txt {
  color: #464646;
  font-size: 0.9rem;
  letter-spacing: 1px;
  font-weight: normal;
  margin-right: 1rem;
  white-space: break-spaces;
  line-height: 1rem;
}

.flex-auto {
  flex: none;
}

.details {
  color: #999;
  font-size: 0.8rem;
  font-weight: normal;
  display: flex;
  align-items: center;
}

.footBar {
  height: 44px;
  position: fixed;
  display: flex;
  background-color: #fe6a00;
  line-height: 44px;
  text-align: center;
  width: 100%;
  bottom: 0;
}

.tixian {
  width: 100%;
  text-align: center;
  color: #fff;
}