/* pages/product/product.wxss */
.contain {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.top {
  position: relative;
  padding: 0.75rem 1rem;
  border: 0px solid transparent;
  border-radius: 2px;
  color: #373737;
  background-color: #faf1e2;
  border-color: #faf1e2;
  font-size: 0.8rem;
  letter-spacing: 1px;
}

van-icon {
  color: #fe7800;
  margin-right: 0.3rem;
}

.con-top {
  margin-bottom: .8rem;
}

.new-list {
  background-color: #fff;
  margin: 0.8rem 0;
}

.news-list-box {
  position: relative;
}

.flex {
  padding: 1rem 1.2rem;
  display: flex;
}

.news-img {
  height: 4.8rem;
  width: 6rem;
  margin-right: 1rem;
}

image {
  width: 6rem;
  height: 4rem;
  border-radius: 0.2rem;
}

.news-title-txt {
  color: #505050;
  line-height: 1.2rem;
  font-size: 0.9rem;
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;
}

.news-detail {
  color: #999;
  line-height: 1rem;
  font-size: 0.75rem;
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.news-info {
  font-size: 0.8rem;
  overflow: hidden;
  margin-top: 0.55rem;
  color: #999;
}


.news-info-time {
  color: #fe7800;
}

.news-list-box:after {
  content: '';
  position: absolute;
  z-index: 2;
  bottom: 0px;
  left: 1.2rem;
  width: calc(100% - 2.4rem);
  height: 1px;
  border-bottom: 1px solid #e2e2e2;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
}

.news-info-share {
  float: right;
  color: #fe7800;
}